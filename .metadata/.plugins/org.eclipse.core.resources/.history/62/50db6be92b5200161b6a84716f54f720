import java.awt.Color;

import javax.swing.JFrame;
import javax.swing.JMenu;
import javax.swing.JMenuBar;
import javax.swing.JMenuItem;
import javax.swing.JPanel;

public class Menu extends JFrame{
	private JPanel jPanel;
	private JMenuBar menuBar;
	private JMenu file, reg, inventory, req;
	private JMenuItem about, close, donor, stock, sell, request, approval;
	private static String titleText = "BBMS";
	public Menu(){
		super(titleText);
		
		jPanel = new JPanel();
		jPanel.setBackground(Color.WHITE);
		jPanel.setLayout(null);
		
		menuBar = new JMenuBar();
		menuBar.setVisible(true);
		
		file = new JMenu("File");
		reg = new JMenu("Registration");
		inventory = new JMenu("Inventory");
		req = new JMenu("Request");
		
		about = new JMenuItem("About");
		donor = new JMenuItem("Donor");
		request = new JMenuItem("Request");
		approval = new JMenuItem("Approval");
		stock = new JMenuItem("Stock");
		close = new JMenuItem("Close");
		
		file.add(about);
		file.add(close);
		menu.add(donor);
		menu.add(request);
		menu.add(approval);
		menu.add(stock);
		
		
		menuBar.add(menu);
		//add(menu);
		add(jPanel);
		setJMenuBar(menuBar);
	}

}
